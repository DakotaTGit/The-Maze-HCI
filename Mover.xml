<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEngine.Experimental.UIElements">
  
  <!-- Defaults for common elements -->
  <Defaults>
    <!-- Panel/Card default -->
    <Panel padding="18" border-radius="18" background-color="#e0e0e0" boxShadow="0 1px 0 #aaa"/>
    
    <!-- Button default -->
    <Button width="56" height="56" border-radius="8" background-color="white" font-size="22"
            textColor="rgb(0,0,0)" boxShadow="0 1px 0 #999" activeTransform="translateY(1)"/>
    
    <!-- Text default -->
    <Text font-family="system-ui,Segoe UI,Roboto,Arial" color="#666" font-size="14"/>
  </Defaults>

  <!-- Main UI -->
  <VisualElement class="card">

    <!-- Status (Timer / Deaths) -->
    <VisualElement class="status">
      <Text name="timerLabel" text="Timer: "/>
      <Text name="timer" text="00:00"/>
      <Text name="deathsLabel" text="Deaths: "/>
      <Text name="deaths" text="0"/>
    </VisualElement>

    <!-- Grid layout -->
    <VisualElement class="grid">

      <!-- Left Panel -->
      <Panel class="left">
        <Text class="big-symbol" name="latest" text="—"/>
        <Text class="label" text="Most Recent"/>
        <VisualElement class="previous" name="previous"/>
        <Text class="label" text="Previous"/>
      </Panel>

      <!-- Right Panel -->
      <Panel class="right">
        <VisualElement style="display:flex; flex-direction:column; align-items:center; gap:6px; height:100%;">
          <VisualElement class="dpad" name="dpad">
            <Button text="" data-dir="up"/>
            <Button text="▲" data-dir="up"/>
            <Button text="" />
            <Button text="◀" data-dir="left"/>
            <Button text="●" data-dir="interact"/>
            <Button text="▶" data-dir="right"/>
            <Button text=""/>
            <Button text="▼" data-dir="down"/>
            <Button text=""/>
          </VisualElement>
        </VisualElement>
      </Panel>

    </VisualElement>

    <!-- Footer -->
    <Text class="footer small" name="comm"/>

  </VisualElement>
</UXML>
