<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEngine.Experimental.UIElements">

  <!-- Default styling pulled from viewer -->
  <Defaults>
    <Panel border-radius="8" background-color="#e6e6e6" padding="18"/>
    <Button width="64" height="64" border-radius="50" background-color="#dff0ff"
            font-size="30" boxShadow="0 1px 0 #999" activeTransform="scale(0.98)"/>
    <Button border-radius="6" padding="8 10" background-color="white" border-color="#bdbdbd"/>
    <Text font-size="13" color="#555" font-weight="400"/>
    <Label font-weight="600"/>
  </Defaults>


  <Panel color="#e6e6e6" padding="18">
    <VerticalLayout spacing="8">

      <Panel color="grey" height="40">
        <Text text="The Maze: Mover"/>
      </Panel>

      <HorizontalLayout spacing="12">

        <!-- LEFT (latest + previous symbols) -->
        <Panel flex="1" color="#dcdcdc" padding="12">
          <VerticalLayout spacing="6">
            <Text text="Latest"/>
            <Text name="latest" font-size="48" text="â€”"/>

            <Text text="Previous"/>
            <Panel name="previous" height="120"/>
          </VerticalLayout>
        </Panel>

        <!-- RIGHT (controls + stats) -->
        <Panel width="260" color="#dcdcdc" padding="12">
          <VerticalLayout spacing="6">

            <Text text="Controls"/>
            <Panel name="dpad"/>

            <Text text="Timer: " name="timerLabel"/>
            <Text text="00:00" name="timer"/>

            <Text text="Deaths:" name="deathsLabel"/>
            <Text text="0" name="deaths"/>

          </VerticalLayout>
        </Panel>

      </HorizontalLayout>

      <Text name="comm" text="Comm: BroadcastChannel"/>

    </VerticalLayout>
  </Panel>

</UXML>
